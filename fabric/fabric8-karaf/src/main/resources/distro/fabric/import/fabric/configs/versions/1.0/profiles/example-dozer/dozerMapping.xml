    <class-b>org.apache.invoice.Person</class-b>
    <field>
      <a>contactPhoneNumber</a>
      <b>contactPhoneNumber</b>
    </field>
    <field>
      <a>email</a>
      <b>email</b>
    </field>
    <field>
      <a>firstName</a>
      <b>firstName</b>
    </field>
    <field>
      <a>lastName</a>
      <b>lastName</b>
    </field>
    <field>
      <a>address</a>
      <b>address</b>
    </field>
  </mapping>
