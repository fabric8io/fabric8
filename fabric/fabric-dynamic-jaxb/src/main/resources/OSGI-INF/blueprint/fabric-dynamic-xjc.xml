<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0">

    <cm:property-placeholder id="proxy" persistent-id="org.fusesource.fabric.xjc.profile" placeholder-prefix="${" placeholder-suffix="}" update-strategy="reload">
        <cm:default-properties>
            <cm:property name="schemaPath" value="schemas"/>
        </cm:default-properties>
    </cm:property-placeholder>

    <reference id="curator" interface="org.apache.curator.framework.CuratorFramework"/>

    <reference id="fabricService" interface="org.fusesource.fabric.api.FabricService"/>

    <bean id="jaxbDataFormat" class="org.fusesource.fabric.jaxb.dynamic.DynamicJaxbDataFormat">
        <property name="compiler" ref="zkJaxbCompiler"/>
    </bean>

    <bean id="zkJaxbCompiler" class="org.fusesource.fabric.jaxb.dynamic.profile.ZKWatcherDynamicCompiler" init-method="init" destroy-method="destroy">
        <property name="curator" ref="curator"/>
        <property name="fabricService" ref="fabricService"/>
        <property name="bundleContext" ref="blueprintBundleContext"/>
        <property name="schemaPath" value="${schemaPath}"/>
    </bean>

</blueprint>
