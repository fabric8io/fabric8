<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>io.fabric8</groupId>
        <artifactId>fabric-project</artifactId>
        <version>1.1.0-SNAPSHOT</version>
    </parent>

    <artifactId>fabric-commands</artifactId>
    <packaging>bundle</packaging>

    <name>Fabric8 :: Karaf Commands</name>

    <properties>
        <fuse.osgi.export>
            io.fabric8.commands.support*;version=${project.version};-noimport:=true,
        </fuse.osgi.export>
        <fuse.osgi.import.additional>
            org.apache.karaf.features*;resolution:=optional,
        </fuse.osgi.import.additional>
        <fuse.osgi.private.pkg>
            org.jledit.utils;-split-package:=first,
            io.fabric8.commands*,
            io.fabric8.utils;-split-package:=first,
            io.fabric8.utils.shell;-split-package:=first
        </fuse.osgi.private.pkg>
        <fuse.osgi.symbolic.name>
            ${project.groupId}.${project.artifactId};blueprint.graceperiod:=false
        </fuse.osgi.symbolic.name>
        <fuse.osgi.service.component>
            <!-- Use explicit file locations because there is no support for wildcard resource discovery in non-osgi environments -->
            OSGI-INF/io.fabric8.commands.ClusterList.xml,
            OSGI-INF/io.fabric8.commands.ContainerAddProfile.xml,
            OSGI-INF/io.fabric8.commands.ContainerChangeProfile.xml,
            OSGI-INF/io.fabric8.commands.ContainerConnect.xml,
            OSGI-INF/io.fabric8.commands.ContainerCreateChild.xml,
            OSGI-INF/io.fabric8.commands.ContainerDefaultJvmOptions.xml,
            OSGI-INF/io.fabric8.commands.ContainerDelete.xml,
            OSGI-INF/io.fabric8.commands.ContainerDomains.xml,
            OSGI-INF/io.fabric8.commands.ContainerInfo.xml,
            OSGI-INF/io.fabric8.commands.ContainerList.xml,
            OSGI-INF/io.fabric8.commands.ContainerRemoveProfile.xml,
            OSGI-INF/io.fabric8.commands.ContainerResolverList.xml,
            OSGI-INF/io.fabric8.commands.ContainerResolverSet.xml,
            OSGI-INF/io.fabric8.commands.ContainerRollback.xml,
            OSGI-INF/io.fabric8.commands.ContainerStart.xml,
            OSGI-INF/io.fabric8.commands.ContainerStop.xml,
            OSGI-INF/io.fabric8.commands.ContainerUpgrade.xml,
            OSGI-INF/io.fabric8.commands.Encrypt.xml,
            OSGI-INF/io.fabric8.commands.EncryptionAlgorithmGet.xml,
            OSGI-INF/io.fabric8.commands.EncryptionAlgorithmSet.xml,
            OSGI-INF/io.fabric8.commands.EncryptionMasterPasswordGet.xml,
            OSGI-INF/io.fabric8.commands.EncryptionMasterPasswordSet.xml,
            OSGI-INF/io.fabric8.commands.EnsembleAdd.xml,
            OSGI-INF/io.fabric8.commands.EnsembleList.xml,
            OSGI-INF/io.fabric8.commands.EnsemblePassword.xml,
            OSGI-INF/io.fabric8.commands.EnsembleRemove.xml,
            OSGI-INF/io.fabric8.commands.FabricInfo.xml,
            OSGI-INF/io.fabric8.commands.MQCreate.xml,
            OSGI-INF/io.fabric8.commands.PatchApply.xml,
            OSGI-INF/io.fabric8.commands.ProfileChangeParents.xml,
            OSGI-INF/io.fabric8.commands.ProfileCopy.xml,
            OSGI-INF/io.fabric8.commands.ProfileCreate.xml,
            OSGI-INF/io.fabric8.commands.ProfileDelete.xml,
            OSGI-INF/io.fabric8.commands.ProfileDisplay.xml,
            OSGI-INF/io.fabric8.commands.ProfileEdit.xml,
            OSGI-INF/io.fabric8.commands.ProfileList.xml,
            OSGI-INF/io.fabric8.commands.ProfileRefresh.xml,
            OSGI-INF/io.fabric8.commands.ProfileRename.xml,
            OSGI-INF/io.fabric8.commands.ProfileScale.xml,
            OSGI-INF/io.fabric8.commands.RequireProfileDelete.xml,
            OSGI-INF/io.fabric8.commands.RequireProfileList.xml,
            OSGI-INF/io.fabric8.commands.RequireProfileSet.xml,
            OSGI-INF/io.fabric8.commands.Status.xml,
            OSGI-INF/io.fabric8.commands.VersionCreate.xml,
            OSGI-INF/io.fabric8.commands.VersionDelete.xml,
            OSGI-INF/io.fabric8.commands.VersionInfo.xml,
            OSGI-INF/io.fabric8.commands.VersionList.xml,
            OSGI-INF/io.fabric8.commands.VersionSetDefault.xml,
            OSGI-INF/io.fabric8.commands.WaitForProvisioning.xml,
            OSGI-INF/io.fabric8.commands.hadoop.Create.xml,
            OSGI-INF/io.fabric8.commands.support.AddProfileCompleter.xml,
            OSGI-INF/io.fabric8.commands.support.BundleLocationCompleter.xml,
            OSGI-INF/io.fabric8.commands.support.ClusterCompleter.xml,
            OSGI-INF/io.fabric8.commands.support.FeaturesCompleter.xml,
            OSGI-INF/io.fabric8.commands.support.FeaturesUrlCompleter.xml,
            OSGI-INF/io.fabric8.commands.support.PidCompleter.xml,
            OSGI-INF/io.fabric8.commands.support.RemoveProfileCompleter.xml,
            OSGI-INF/io.fabric8.commands.support.RootContainerCompleter.xml,
            OSGI-INF/io.fabric8.commands.support.StartedContainerCompleter.xml,
            OSGI-INF/io.fabric8.commands.support.StoppedContainerCompleter.xml,
            OSGI-INF/io.fabric8.commands.support.ZNodeCompleter.xml
        </fuse.osgi.service.component>
    </properties>

    <dependencies>

        <dependency>
            <groupId>org.osgi</groupId>
            <artifactId>org.osgi.core</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.osgi</groupId>
            <artifactId>org.osgi.enterprise</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
          <groupId>io.fabric8</groupId>
          <artifactId>fabric-api</artifactId>
        </dependency>
        <dependency>
            <groupId>io.fabric8</groupId>
            <artifactId>fabric-boot-commands</artifactId>
        </dependency>
        <dependency>
            <groupId>io.fabric8</groupId>
            <artifactId>fabric-utils</artifactId>
        </dependency>
        <dependency>
            <groupId>io.fabric8</groupId>
            <artifactId>fabric-zookeeper</artifactId>
        </dependency>
        <dependency>
            <groupId>io.fabric8</groupId>
            <artifactId>fabric-core</artifactId>
        </dependency>
        <dependency>
            <groupId>org.jledit</groupId>
            <artifactId>core</artifactId>
        </dependency>
        <dependency>
            <groupId>org.apache.karaf.features</groupId>
            <artifactId>org.apache.karaf.features.core</artifactId>
        </dependency>
        <dependency>
            <groupId>org.apache.karaf.features</groupId>
            <artifactId>org.apache.karaf.features.command</artifactId>
        </dependency>
        <dependency>
            <groupId>org.apache.karaf.shell</groupId>
            <artifactId>org.apache.karaf.shell.console</artifactId>
        </dependency>
        <dependency>
            <groupId>org.apache.karaf.shell</groupId>
            <artifactId>org.apache.karaf.shell.config</artifactId>
        </dependency>
        <dependency>
            <groupId>org.apache.karaf.shell</groupId>
            <artifactId>org.apache.karaf.shell.ssh</artifactId>
        </dependency>

        <!-- Provided Dependencies -->
        <dependency>
            <groupId>org.apache.felix</groupId>
            <artifactId>org.apache.felix.scr.annotations</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.apache.servicemix.bundles</groupId>
            <artifactId>org.apache.servicemix.bundles.jsch</artifactId>
            <scope>provided</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-scr-plugin</artifactId>
                <executions>
                    <execution>
                        <goals>
                            <goal>scr</goal>
                        </goals>
                        <configuration>
                            <specVersion>1.2</specVersion>
                            <strictMode>false</strictMode>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>
