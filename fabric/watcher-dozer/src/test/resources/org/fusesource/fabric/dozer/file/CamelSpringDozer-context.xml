<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd
    ">

  <bean id="audit" class="org.foo.CustomerService"/>

  <camelContext id="myCamel" xmlns="http://camel.apache.org/schema/spring">
    <route>
      <from uri="direct:start"/>
      <to uri="bean:audit?method=auditCustomer"/>
    </route>
  </camelContext>

  <bean id="dozerWatcher" class="org.fusesource.fabric.dozer.file.FileWatcherMapping" init-method="init" destroy-method="destroy">
    <property name="camelContext" ref="myCamel"/>
    <property name="rootPath" value="src/test/resources"/>
  </bean>

