        io.fabric8.activemq.facade*;version=${project.version};-noimport:=true,
    </fuse.osgi.export>
    <fuse.osgi.bundle.name>Fuse Active MQ Facade Plugin</fuse.osgi.bundle.name>
  </properties>
  
