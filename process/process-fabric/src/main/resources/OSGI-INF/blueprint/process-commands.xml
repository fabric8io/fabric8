<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:ext="http://aries.apache.org/blueprint/xmlns/blueprint-ext/v1.0.0"
           xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0">

    <ext:property-placeholder placeholder-prefix="$[" placeholder-suffix="]"/>

    <command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.1.0">
        <command name="fabric/process-install">
            <action class="io.fabric8.process.fabric.commands.Install">
                <property name="containerProcessManager" ref="containerProcessManager"/>
            </action>
            <completers>
                <ref component-id="aliveContainerCompleter"/>
                <null/>
            </completers>
            <optional-completers>
                <entry key="--kind" value-ref="kindCompleter"/>
            </optional-completers>
        </command>
        <command name="fabric/process-install-jar">
            <action class="io.fabric8.process.fabric.commands.InstallJar">
                <property name="containerProcessManager" ref="containerProcessManager"/>
            </action>
            <completers>
                <ref component-id="aliveContainerCompleter"/>
                <null/>
            </completers>
            <optional-completers>
                <entry key="--kind" value-ref="kindCompleter"/>
                <entry key="--main" value-ref="mainClassCompleter"/>
            </optional-completers>
        </command>
        <command name="fabric/process-list">
            <action class="io.fabric8.process.fabric.commands.ProcessList">
                <property name="containerProcessManager" ref="containerProcessManager"/>
            </action>
        </command>
        <command name="fabric/process-start">
            <action class="io.fabric8.process.fabric.commands.Start">
                <property name="containerProcessManager" ref="containerProcessManager"/>
            </action>
            <completers>
                <ref component-id="aliveContainerCompleter"/>
                <null/>
            </completers>
        </command>
        <command name="fabric/process-stop">
            <action class="io.fabric8.process.fabric.commands.Stop">
                <property name="containerProcessManager" ref="containerProcessManager"/>
            </action>
            <completers>
                <ref component-id="aliveContainerCompleter"/>
                <null/>
            </completers>
        </command>
        <command name="fabric/process-restart">
            <action class="io.fabric8.process.fabric.commands.Restart">
                <property name="containerProcessManager" ref="containerProcessManager"/>
            </action>
            <completers>
                <ref component-id="aliveContainerCompleter"/>
                <null/>
            </completers>
        </command>
        <command name="fabric/process-status">
            <action class="io.fabric8.process.fabric.commands.Status">
                <property name="containerProcessManager" ref="containerProcessManager"/>
            </action>
            <completers>
                <ref component-id="aliveContainerCompleter"/>
                <null/>
            </completers>
        </command>
        <command name="fabric/process-kill">
            <action class="io.fabric8.process.fabric.commands.Kill">
                <property name="containerProcessManager" ref="containerProcessManager"/>
            </action>
            <completers>
                <ref component-id="aliveContainerCompleter"/>
                <null/>
            </completers>
        </command>
        <command name="fabric/process-uninstall">
            <action class="io.fabric8.process.fabric.commands.Uninstall">
                <property name="containerProcessManager" ref="containerProcessManager"/>
            </action>
            <completers>
                <ref component-id="aliveContainerCompleter"/>
                <null/>
            </completers>
        </command>
    </command-bundle>

    <bean id="aliveContainerCompleter" class="io.fabric8.commands.support.StartedContainerCompleter">
        <property name="fabricService" ref="fabricService"/>
    </bean>

    <bean id="kindCompleter" class="io.fabric8.process.manager.commands.KindCompleter" init-method="init"/>

    <bean id="mainClassCompleter" class="io.fabric8.process.manager.commands.MainClassCompleter"/>


</blueprint>
