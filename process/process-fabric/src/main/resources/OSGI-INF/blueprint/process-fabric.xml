<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:ext="http://aries.apache.org/blueprint/xmlns/blueprint-ext/v1.0.0">

    <reference id="fabricService" interface="io.fabric8.api.FabricService"/>

    <reference id="mbeanServer" interface="javax.management.MBeanServer">
        <reference-listener ref="containerProcessManager" bind-method="bindMBeanServer" unbind-method="unbindMBeanServer" />
    </reference>

    <bean id="containerProcessManager" class="org.fusesource.process.fabric.ContainerProcessManagerService">
        <property name="fabricService" ref="fabricService"/>
    </bean>

    <bean id="childProcessManager" class="org.fusesource.process.fabric.child.ChildProcessManager" destroy-method="destroy">
        <property name="fabricService" ref="fabricService"/>
        <property name="processManager" ref="processManager"/>
    </bean>

    <bean id="childProcessManagerFactory" class="org.fusesource.process.fabric.child.ChildProcessFactory">
        <property name="childProcessManager" ref="childProcessManager"/>
    </bean>

    <reference id="processManager" interface="org.fusesource.process.manager.ProcessManager" availability="mandatory"/>

    <service ref="containerProcessManager" interface="org.fusesource.process.fabric.ContainerProcessManager"/>

    <service ref="childProcessManagerFactory" interface="org.osgi.service.cm.ManagedServiceFactory">
        <service-properties>
            <entry key="service.pid" value="org.fusesource.process.fabric.child"/>
        </service-properties>
    </service>

</blueprint>
