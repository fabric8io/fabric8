<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:ext="http://aries.apache.org/blueprint/xmlns/blueprint-ext/v1.0.0">

    <reference id="mbeanServer" interface="javax.management.MBeanServer">
        <reference-listener ref="processManager" bind-method="bindMBeanServer" unbind-method="unbindMBeanServer" />
    </reference>

    <service id="processService" ref="processServiceFactory" interface="org.osgi.service.cm.ManagedServiceFactory">
      <service-properties>
        <entry key="service.pid" value="org.fusesource.process"/>
      </service-properties>
    </service>

    <bean id="processManager" class="org.fusesource.process.manager.service.ProcessManagerService" init-method="init"/>

    <bean id="processServiceFactory" class="org.fusesource.process.manager.service.ProcessServiceFactory"
          init-method="init"
          destroy-method="destroy">
      <property name="processManager" ref="processManager" />
      <property name="bundleContext" ref="blueprintBundleContext"/>
    </bean>

    <service ref="processManager" interface="org.fusesource.process.manager.ProcessManager"/>

</blueprint>
