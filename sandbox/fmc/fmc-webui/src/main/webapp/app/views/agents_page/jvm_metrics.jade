table.borderless
  tr
    td
      .alert-message.block-message.success.center.nowrap
        strong CPU Usage
        h4 #{percent}%
    td
      .alert-message.block-message.success.center.nowrap
        strong Physical Memory
        h4 #{as_memory(os_memory_free)} free
        h4 #{as_memory(os_memory_total)} total
    td
      .alert-message.block-message.success.center.nowrap
        strong Heap Memory
        h4 #{as_memory(heap_memory.used)} used
        h4 #{as_memory(heap_memory.alloc)} alloc
        h4 #{as_memory(heap_memory.max)} max
