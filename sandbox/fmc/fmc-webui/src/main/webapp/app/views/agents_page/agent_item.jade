.summary
  - color = if alive then "green" else "red"
  - tooltipText = if alive then "online" else "offline"
  .nowrap.block.right
    .button-tray.hovered
      a.logs(href="#")
        img(src="img/console-16.png")
      - if root 
        a.add(href="#")
          img(src="img/plus-16.png")
      - else 
        - if alive
          a.stop(href="#")
            img(src="img/stop-16.png")
        - else 
          a.start(href="#")
            img(src="img/play-16.png")
        a.delete(href="#")
          img(src="img/x-16.png")
  div{:class => "#{color}-circle", :title => tooltipText}
  | #{id}
ul
