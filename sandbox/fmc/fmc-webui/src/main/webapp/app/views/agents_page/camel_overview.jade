a.accordion(href="#")
  h3 Camel Overview
div
  - _.each camels, (camel)->
    h4 Context: #{camel.id}
    table
      tbody
        tr
          td
            strong Version
          td #{camel.version}
        tr
          td
            strong State
          td #{camel.state} (#{camel.uptime})
        tr
          td
            a(href="#{link}/#{camel.id}!components")
              strong Components
          td #{camel.components.length}
        tr
          td
            a(href="#{link}/#{camel.id}!endpoints")
              strong Endpoints
          td #{camel.endpoints.length}
        tr
          td
            a(href="#{link}/#{camel.id}!routes")
              strong Routes
          td #{camel.routes.length}
