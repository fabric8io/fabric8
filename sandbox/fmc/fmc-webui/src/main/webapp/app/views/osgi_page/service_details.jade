table.overviewSection
  tbody
    tr
      td 
        strong Service ID: 
      td #{id}
    tr
      td 
        strong Object Classes: 
      td
        - if (object_classes.length > 0)
          ul.simple
            - for value in object_classes
              li #{value}
        - else if (object_classes.length == 1)
          | #{object_classes[0]}
        - else
          i None
    tr
      td 
        strong Used by: 
      td
        - if (using_bundles.length > 0)
          ul.simple
            - for value in using_bundles
              li
                a(href="#/containers/details/#{container}/osgi/bundles/#{value}")#{value}
        - else
          i None
    - for property in properties
      - if property.key != "objectClass" && property.key != "service.id"
        tr
          td
            strong #{property.key}: 
          td
            | #{property.value}
