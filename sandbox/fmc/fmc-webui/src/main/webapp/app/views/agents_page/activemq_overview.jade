- _.each brokers, (broker) ->
  h4 Broker: #{broker.name}
  table
    tbody
      tr
        td
          strong Version
        td #{broker.version}
      tr
        td
          a(href="#{link}/#{broker.id}!connections")
            strong Connections
        td #{broker.connections.length}
      tr
        td
          a(href="#{link}/#{broker.id}!queues")
            strong Queues
        td #{broker.queues.length}
      tr
        td
          a(href="#{link}/#{broker.id}!topics")
            strong Topics
        td #{broker.topics.length}
      tr
        td
          a(href="#{link}/#{broker.id}!dsubs")
            strong Durable Subscriptions
        td #{broker.durable_topic_subscribers.length}
      tr
        td
          strong Enqueues
        td #{broker.total_enqueue_count}
      tr
        td
          strong Dequeues
        td #{broker.total_dequeue_count}
      tr
        td
          strong Messages
        td #{broker.total_message_count}
