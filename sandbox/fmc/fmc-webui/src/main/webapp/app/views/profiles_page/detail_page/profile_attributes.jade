- if $.browser.msie
  form
    fieldset(style="margin-bottom: 0px; padding-top: 0px;")
      .clearfix(style="margin-bottom: 7px;")
        label(for="locked" onclick="") Locked:
        .input
          input#locked(name="locked" type="checkbox" style="margin-top: 8px;")
      .clearfix(style="margin-bottom: 0px")
        label(for="abstract" onclick="") Abstract:
        .input
          input#abstract(name="abstract" type="checkbox" style="margin-top: 8px;")
- else
  fieldset.toggle
    input#locked(name="locked" type="checkbox")
    label(for="locked" onclick="") Locked:
    span.toggle-button
  fieldset.toggle
    input#abstract(name="abstract" type="checkbox")
    label(for="abstract" onclick="") Abstract:
    span.toggle-button
