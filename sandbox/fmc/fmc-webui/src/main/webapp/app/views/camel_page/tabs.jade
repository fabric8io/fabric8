#camel_tab_menu
  ul.tabs(if="")
    li(class="#{'active' if tab=='components'}")
      a(href="#{link}!components")
        | Components
        | (#{model.components.length})
    li(class="#{'active' if tab=='endpoints'}")
      a(href="#{link}!endpoints")
        | Endpoints
        | (#{model.endpoints.length})
    li(class="#{'active' if tab=='routes'}")
      a(href="#{link}!routes")
        | Routes
        | (#{model.routes.length})
div
  - if tab == "components" 
    table.zebra-striped
      thead
        tr
          th Name
          th State
      tbody
        - _.each model.components, (item, index) ->
          tr(ref="#{index}")
            td #{item.name}
            td #{item.state}
  - else if tab == "endpoints"
    table.zebra-striped
      thead
        tr
          th URI
          th State
      tbody
        - _.each model.endpoints, (item, index) ->
          tr(ref="#{index}")
            td #{item.endpoint_uri}
            td #{item.state}
  - else if tab == "routes"
    table.zebra-striped
      thead
        tr
          th ID
          th State
          th URI
          th Completed
          th Failed
      tbody
        - _.each model.routes, (item, index)->
          tr(ref="#{index}")
            td #{item.id}
            td #{item.state}
            td #{item.endpoint_uri}
            td #{item.exchanges_completed}
            td #{item.exchanges_failed}
