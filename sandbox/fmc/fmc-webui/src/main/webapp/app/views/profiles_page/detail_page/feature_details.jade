.popover.left(style="top:#{offset.top}px; left:#{offset.left}px; display:block")
  .arrow
  .inner(style="max-width:500px; width:500px; max-height: 500px; height: 500px;")
    h3.title 
      a.close(href="#") &times;
      | Feature - #{name} 
    .content(style="width: 472px; height: 435px;")
      .display(style="white-space: nowrap; height: 100%; width: 100%; overflow: auto;")
        ul.repo-list
          li
            strong Version: 
            | #{version}
          - if resolver?
            li 
              strong Resolver: 
              | #{resolver}
          - if description?
            li
              strong Description: 
              | #{description}
          - if start_level?
            li
              strong Start Level: 
              | #{start_level}
          li
            - if feature?
              h6 Features
              ul.repo-list
              - for f in feature                
                - if f.version?
                  li #{f}/#{f.version}
                - else
                  li #{f}
            - if bundle?
              h6 Bundles
              ul.repo-list
              - for b in bundle
                - if b.dependency?
                  li #{b}&nbsp;&nbsp;<strong>Dependency:</strong> #{b.dependency}
                - else
                  li #{b}
            - if configs?
              h6 Configuration
              ul.repo-list
                - for c in configs
                  li.config-display
                    strong #{c.name}
                    ul.repo-list
                      - for line in _.lines(c.text)
                        li #{line}



