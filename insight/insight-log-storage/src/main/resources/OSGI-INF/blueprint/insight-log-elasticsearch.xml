<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0"
           xmlns:ext="http://aries.apache.org/blueprint/xmlns/blueprint-ext/v1.0.0">

    <ext:property-placeholder placeholder-prefix="$[" placeholder-suffix="]"/>

    <cm:property-placeholder persistent-id="org.fusesource.insight.log.storage" update-strategy="reload"/>

    <bean id="appender" class="org.fusesource.insight.log.storage.InsightLogAppender">
        <property name="name" value="$[karaf.name]" />
        <property name="type" value="${es.log.type}"/>
        <property name="storage" ref="storage" />
    </bean>
    <service ref="appender" interface="org.ops4j.pax.logging.spi.PaxAppender">
        <service-properties>
            <entry key="org.ops4j.pax.logging.appender.name" value="InsightLogAppender"/>
        </service-properties>
    </service>

    <bean id="handler" class="org.fusesource.insight.log.storage.InsightEventHandler">
        <property name="name" value="$[karaf.name]" />
        <property name="type" value="${es.evt.type}"/>
        <property name="storage" ref="storage" />
    </bean>
    <service ref="handler" interface="org.osgi.service.event.EventHandler">
        <service-properties>
            <entry key="event.topics" value="*" />
        </service-properties>
    </service>

    <bean id="storage" class="org.fusesource.insight.log.storage.StorageProxy"
          init-method="init" destroy-method="destroy">
        <property name="context" ref="blueprintBundleContext" />
    </bean>

</blueprint>