{
  "id": "elasticsearch-config",
  "kind": "Config",
  "apiVersion": "v1beta1",
  "name": "elasticsearch-config",
  "description": "Creates an elasticsearch pod & service",
  "items": [{
    "apiVersion": "v1beta1",
    "kind": "Pod",
    "id": "elasticsearch-pod",
    "desiredState": {
      "manifest": {
        "version": "v1beta1",
        "id": "es",
        "containers": [
          {
            "name": "elasticsearch",
            "image": "dockerfile/elasticsearch",
            "imagePullPolicy": "PullIfNotPresent",
            "ports": [
              {
                "name": "es-port",
                "containerPort": 9200,
                "hostPort": 9200
              },
              {
                "name": "es-transport-port",
                "containerPort": 9300
              }
            ],
            "volumeMounts": [
              {
                "name": "es-persistent-storage",
                "mountPath": "/data"
              }
            ]
          }
        ],
        "volumes": [
          {
            "name": "es-persistent-storage",
            "source": {
              "emptyDir": {}
            }
          }
        ]
      }
    },
    "labels": {
      "app": "elasticsearch"
    }
  },
  {
    "apiVersion": "v1beta1",
    "kind": "Service",
    "id": "elasticsearch",
    "containerPort": "es-port",
    "port": 9200,
    "selector": {
      "app": "elasticsearch"
    }
  }]
}
