{
  "id": "elasticsearch-config",
  "kind": "Config",
  "apiVersion": "v1beta1",
  "name": "elasticsearch-config",
  "description": "Creates an elasticsearch pod & service",
  "items": [{
    "apiVersion": "v1beta1",
    "kind": "ReplicationController",
    "id": "elasticsearch-controller",
    "desiredState": {
      "replicas": 1,
      "replicaSelector": {
        "component": "elasticsearch"
      },
      "podTemplate": {
        "desiredState": {
          "manifest": {
            "version": "v1beta1",
            "id": "es",
            "containers": [
              {
                "name": "elasticsearch",
                "image": "fabric8/elasticsearch-k8s:1.4.4",
                "imagePullPolicy": "PullIfNotPresent",
                "env": [
                  {
                    "name": "SELECTOR",
                    "value": "component=elasticsearch,cluster=fabric8"
                  },
                  {
                    "name": "KUBERNETES_TRUST_CERT",
                    "value": "true"
                  }
                ],
                "ports": [
                  {
                    "name": "es-port",
                    "containerPort": 9200
                  },
                  {
                    "name": "es-transport-port",
                    "containerPort": 9300
                  }
                ],
                "volumeMounts": [
                  {
                    "name": "es-data-storage",
                    "mountPath": "/usr/share/elasticsearch/data"
                  }
                ]
              }
            ],
            "volumes": [
              {
                "name": "es-data-storage",
                "source": {
                  "emptyDir": {}
                }
              }
            ]
          }
        },
        "labels": {
          "component": "elasticsearch",
          "cluster": "fabric8"
        }
      }
    }
  },
  {
    "apiVersion": "v1beta1",
    "kind": "Service",
    "id": "elasticsearch",
    "containerPort": "es-port",
    "port": 9200,
    "selector": {
      "component": "elasticsearch",
      "cluster": "fabric8"
    }
  }]
}

