{
  "id": "fabric8-config",
  "kind": "Config",
  "apiVersion": "v1beta1",
  "name": "fabric8-config",
  "description": "Creates a hawtio console and private docker registry",
  "items": [
    {
      "apiVersion": "v1beta1",
      "containerPort": 8080,
      "creationTimestamp": null,
      "id": "fabric8-console-service",
      "kind": "Service",
      "port": 8080,
      "selector": {
        "component": "fabric8Console"
      }
    },
    {
      "apiVersion": "v1beta1",
      "creationTimestamp": null,
      "desiredState": {
        "podTemplate": {
          "desiredState": {
            "manifest": {
              "containers": [
                {
                  "image": "fabric8/hawtio:latest",
                  "name": "fabric8-console-container",
                  "imagePullPolicy": "PullIfNotPresent",
                  "env": [
                    {
                      "name": "DOCKER_REGISTRY",
                      "value": "$REGISTRY_SERVICE_HOST:$REGISTRY_SERVICE_PORT"
                    },
                    {
                      "name": "KUBERNETES_TRUST_CERT",
                      "value": "true"
                    },
                    {
                      "name": "PROXY_DISABLE_CERT_VALIDATION",
                      "value": "true"
                    }
                  ],
                  "ports": [
                    {
                      "containerPort": 8080,
                      "protocol": "TCP"
                    }
                  ]
                }
              ],
              "id": "hawtioPod",
              "version": "v1beta1",
              "volumes": null
            },
            "restartpolicy": {}
          },
          "labels": {
            "component": "fabric8Console"
          }
        },
        "replicaSelector": {
          "component": "fabric8Console"
        },
        "replicas": 1
      },
      "id": "fabric8-console-controller",
      "kind": "ReplicationController",
      "labels": {
        "component": "fabric8ConsoleController"
      }
    },
    {
      "id": "fabric8-console-route",
      "apiVersion": "v1beta1",
      "kind": "Route",
      "host": "fabric8.local",
      "serviceName": "fabric8-console"
    }
  ]
}
