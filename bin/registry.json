{
  "id": "registry-config",
  "kind": "Config",
  "apiVersion": "v1beta1",
  "name": "registry",
  "description": "Creates a private docker registry",
  "items": [
    {
      "apiVersion": "v1beta1",
      "containerPort": 5000,
      "id": "docker-registry",
      "kind": "Service",
      "port": 5000,
      "selector": {
        "name": "registry-pod"
      }
    },
    {
      "apiVersion": "v1beta1",
      "desiredState": {
        "podTemplate": {
          "desiredState": {
            "manifest": {
              "containers": [
                {
                  "image": "registry",
                  "name": "registry-container",
                  "imagePullPolicy": "PullIfNotPresent",
                  "ports": [
                    {
                      "containerPort": 5000,
                      "protocol": "TCP"
                    }
                  ],
                  "volumeMounts":[
                    {
                      "name":"registry-persistent-storage",
                      "mountPath":"/registry"
                    }
                  ],
                  "env":[
                    {
                      "name":"STORAGE_PATH",
                      "value":"/registry"
                    }
                  ]
                }
              ],
              "volumes":[
                {
                  "name":"registry-persistent-storage",
                  "source": {"hostDir":{"path": "/volumes/registry/data"}}
                }
             ],
              "id": "registry-pod",
              "version": "v1beta1"
            }
          },
          "labels": {
            "name": "registry-pod"
          }
        },
        "replicaSelector": {
          "name": "registry-pod"
        },
        "replicas": 1
      },
      "id": "registry-controller",
      "kind": "ReplicationController",
      "labels": {
        "name": "registry-controller"
      }
    }
  ]
}
