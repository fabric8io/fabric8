<?xml version="1.0" encoding="UTF-8"?>

<module xmlns="urn:jboss:module:1.1" name="org.fusesource.fabric.core">

    <properties>
        <property name="jboss.api" value="private"/>
    </properties>

    <resources>
        <resource-root path="fabric-core-@project.version@.jar"/>
        <resource-root path="jasypt-@jasypt.version@.jar"/>
    </resources>

    <exports>
        <exclude path="org/apache/felix/utils/**"/>
    </exports>
    
    <dependencies>
        <module name="javax.api"/>
        <module name="org.apache.karaf"/>
        <module name="org.codehaus.jackson.jackson-mapper-asl"/>
        <module name="org.fusesource.fabric.api"/>
        <module name="org.fusesource.fabric.utils"/>
        <module name="org.fusesource.fabric.zookeeper"/>
        <module name="org.osgi.enterprise"/>
        <module name="org.osgi.core"/>
        <module name="org.slf4j"/>
    </dependencies>

</module>
