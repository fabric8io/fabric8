<project default="build">

  <!-- ================================================================== -->
  <!-- Setup                                                              -->
  <!-- ================================================================== -->
  <property name="etc.dir" value="${basedir}/etc" />
  <property name="output.dir" value="${basedir}/target" />
  <property name="resources.dir" value="${basedir}/src/main/resources" />
  <property name="wildfly.patch.dir" value="${output.dir}/wildfly-patch" />
  <property name="deploy.artifacts.dir" value="${output.dir}/deploy-artifacts" />
  <property name="deploy.artifacts.lib" value="${deploy.artifacts.dir}/lib" />
  <property name="deploy.artifacts.resources" value="${deploy.artifacts.dir}/resources" />

  <!-- ================================================================== -->
  <!-- Initialization                                                     -->
  <!-- ================================================================== -->
  <target name="init">
  </target>

  <!-- ================================================================== -->
  <!-- Distribution                                                       -->
  <!-- ================================================================== -->
  <target name="build" depends="init">

  	<!-- Filter the modules resources -->
    <copy todir="${wildfly.patch.dir}" overwrite="true">
        <fileset dir="${etc.dir}" />
		<filterset>
	        <filter token="project.version" value="${project.version}" />
	        <filter token="jansi.version" value="${jansi-version}" />
	        <filter token="jasypt.version" value="${jasypt-version}" />
	        <filter token="karaf.version" value="${karaf-version}" />
      	</filterset>
    </copy>
  	
  	<!-- Copy gravia patch -->
    <copy todir="${wildfly.patch.dir}" overwrite="true">
        <fileset dir="${output.dir}/gravia-wildfly-patch" />
    </copy>
  	
  	<!-- Copy module resources -->
    <copy todir="${wildfly.patch.dir}/modules/system/layers/base/org/apache/karaf/main" overwrite="true">
        <fileset dir="${deploy.artifacts.lib}">
        	<include name="org.apache.karaf.admin.core-*"/>
        	<include name="org.apache.karaf.admin.management-*"/>
        	<include name="org.apache.karaf.util-*"/>
        </fileset>
    </copy>
    <copy todir="${wildfly.patch.dir}/modules/system/layers/base/org/fusesource/fabric/api/main" overwrite="true">
        <fileset file="${deploy.artifacts.lib}/fabric-api-*.jar" />
    </copy>
    <copy todir="${wildfly.patch.dir}/modules/system/layers/base/org/fusesource/fabric/core/main" overwrite="true">
        <fileset dir="${deploy.artifacts.lib}">
        	<include name="fabric-core-*"/>
        	<include name="jasypt-*"/>
        </fileset>
    </copy>
    <copy todir="${wildfly.patch.dir}/modules/system/layers/base/org/fusesource/fabric/git/main" overwrite="true">
        <fileset file="${deploy.artifacts.lib}/fabric-git-*.jar" />
    </copy>
    <copy todir="${wildfly.patch.dir}/modules/system/layers/base/org/fusesource/fabric/groups/main" overwrite="true">
        <fileset file="${deploy.artifacts.lib}/fabric-groups-*.jar" />
    </copy>
    <copy todir="${wildfly.patch.dir}/modules/system/layers/base/org/fusesource/fabric/utils/main" overwrite="true">
        <fileset file="${deploy.artifacts.lib}/fabric-utils-*.jar" />
    </copy>
    <copy todir="${wildfly.patch.dir}/modules/system/layers/base/org/fusesource/fabric/zookeeper/main" overwrite="true">
        <fileset file="${deploy.artifacts.lib}/fabric-zookeeper-*.jar" />
    </copy>
    <copy todir="${wildfly.patch.dir}/modules/system/layers/base/org/wildfly/extension/fabric/main" overwrite="true">
        <fileset file="${output.dir}/fpr-container-wildfly-${project.version}.jar" />
    </copy>
	
  	<!-- Zip the wildfly patch -->
  	<zip destfile="${output.dir}/${project.artifactId}-${project.version}-patch.zip" basedir="${wildfly.patch.dir}"/>
  	<tar destfile="${output.dir}/${project.artifactId}-${project.version}-patch.tar.gz" basedir="${wildfly.patch.dir}"/>
  	
  </target>
</project>
