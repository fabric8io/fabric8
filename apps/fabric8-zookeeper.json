                                        {
                                            "name": "zookeeper-peer-port",
                                            "containerPort": 2888,
                                            "protocol": "TCP"
                                        },
                                        {
                                            "name": "zookeeper-election-port",
                                            "containerPort": 3888,
                                            "protocol": "TCP"
                                        }
                                    ]
                                }
                            ],
                            "id": "zookeeper-pod-2",
                            "version": "v1beta1",
                            "volumes":[{
                                "name": "data",
