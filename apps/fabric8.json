{
  "id": "fabric8-config",
  "kind": "Config",
  "apiVersion": "v1beta1",
  "name": "fabric8-config",
  "description": "Creates a hawtio console and private docker registry",
  "items": [
    {
      "apiVersion": "v1beta1",
      "containerPort": 0,
      "creationTimestamp": null,
      "id": "hawtio-service",
      "kind": "Service",
      "port": 8484,
      "selector": {
        "name": "hawtioPod"
      }
    },
    {
      "apiVersion": "v1beta1",
      "creationTimestamp": null,
      "desiredState": {
        "podTemplate": {
          "desiredState": {
            "manifest": {
              "containers": [
                {
                  "image": "fabric8/hawtio",
                  "name": "hawtio-container",
                  "env": [
                    {
                      "name": "KUBERNETES_MASTER",
                      "value": "http://openshifthost:8080"
                    },
                    {
                      "name": "DOCKER_HOST",
                      "value": "tcp://dockerhost:2375"
                    }
                  ],
                  "ports": [
                    {
                      "hostPort": 8383,
                      "containerPort": 8080,
                      "protocol": "TCP"
                    }
                  ]
                }
              ],
              "id": "hawtioPod",
              "version": "v1beta1",
              "volumes": null
            },
            "restartpolicy": {}
          },
          "labels": {
            "name": "hawtioPod"
          }
        },
        "replicaSelector": {
          "name": "hawtioPod"
        },
        "replicas": 1
      },
      "id": "hawtioController",
      "kind": "ReplicationController",
      "labels": {
        "name": "hawtioController"
      }
    },

    {
      "apiVersion": "v1beta1",
      "containerPort": 0,
      "creationTimestamp": null,
      "id": "registryservice",
      "kind": "Service",
      "port": 5000,
      "selector": {
        "name": "registryPod"
      }
    },
    {
      "apiVersion": "v1beta1",
      "creationTimestamp": null,
      "desiredState": {
        "podTemplate": {
          "desiredState": {
            "manifest": {
              "containers": [
                {
                  "image": "registry",
                  "name": "registry-container",
                  "ports": [
                    {
                      "hostPort": 5001,
                      "containerPort": 5000,
                      "protocol": "TCP"
                    }
                  ]
                }
              ],
              "id": "registryPod",
              "version": "v1beta1",
              "volumes": null
            },
            "restartpolicy": {}
          },
          "labels": {
            "name": "registryPod"
          }
        },
        "replicaSelector": {
          "name": "registryPod"
        },
        "replicas": 1
      },
      "id": "registryController",
      "kind": "ReplicationController",
      "labels": {
        "name": "registryController"
      }
    }
  ]
}